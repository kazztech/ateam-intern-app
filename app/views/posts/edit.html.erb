<div><%= link_to "投稿に戻る", "/posts/" + @post.id.to_s %></div>
<h2 class="mb-4">新規投稿</h2>

<%= form_tag({:controller => 'posts', :action => 'delete'}, {:method => :post, :multipart => true}) do %>
    <%= hidden_field_tag :id, @post.id %>
    <div class="form-group">
        <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#modal1">
            削除
        </button>
        <div class="modal fade" id="modal1" tabindex="-1" role="dialog"
            aria-labelledby="label1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="label1">削除確認</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        本当にこの投稿を削除しますか？
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">戻る</button>
                        <%= submit_tag("削除", class: "btn btn-danger") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>

<%= form_tag({:controller => 'posts', :action => 'update'}, {:method => :post, :multipart => true}) do %>
<%= hidden_field_tag :id, @post.id %>

<div class="form-group">
    <%= label_tag :name, 'ニックネーム' %>
    <%= text_field_tag :name, @post.name, class: 'form-control' %>
</div>

<div class="form-group">
    <%= label_tag :title, 'タイトル' %>
    <%= text_field_tag :title, @post.title, class: 'form-control' %>
</div>

<div class="form-group">
    <%= label_tag :content, '内容' %>
    <%= text_area_tag :content, @post.content, class: 'form-control', rows: "4" %>
</div>

<div class="form-group">
    <%= label_tag :image, '添付画像' %>
    <%= file_field_tag :image %>
</div>

<div class="form-group text-right">
    <%= submit_tag "送信", class: "btn btn-primary" %>
</div>
<% end %>